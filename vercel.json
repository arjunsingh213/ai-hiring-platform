{
    "version": 2,
    "framework": null,
    "buildCommand": "cd client && npm install && npm run build",
    "outputDirectory": "client/dist",
    "installCommand": "npm install && cd client && npm install && cd ../server && npm install",
    "functions": {
        "api/index.js": {
            "memory": 1024,
            "maxDuration": 60,
            "includeFiles": "server/**"
        }
    },
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/api"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}